{
  "name": "ivebot",
  "version": "2.2.1",
  "description": "The bot that created the iPhone X.",
  "main": "server/index.ts",
  "scripts": {
    "test": "tsc && ava",
    "nyan": "ava --tap | tap-nyan",
    "lint": "eslint . --ext .js,.ts,.tsx && tsc --noEmit && graphql-schema-linter server/schema.graphql",
    "start": "ts-node server/index.ts --production",
    "build": "next build && tsc",
    "dev": "nodemon server/index.ts",
    "mongo": "mongod --dbpath=database"
  },
  "author": "Ibrahim Ansari <ansari.ibrahim1@gmail.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.5.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.1.1",
    "@material-ui/icons": "^3.0.1",
    "apollo-boost": "^0.1.4",
    "discord.io": "woor/discord.io#gateway_v6",
    "graphql": "^0.13.2",
    "graphql-yoga": "^1.8.5",
    "isomorphic-unfetch": "^2.0.0",
    "json5": "^0.5.1",
    "mathjs": "^4.1.1",
    "mongodb": "^3.0.6",
    "next": "^7.0.1",
    "react": "^16.2.0",
    "react-apollo": "^2.1.3",
    "react-dom": "^16.2.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/mongodb": "^3.0.12",
    "@types/next": "^2.4.7",
    "@types/node": "^8.0.53",
    "@types/react": "^16.0.36",
    "@zeit/next-typescript": "^0.1.1",
    "ava": "^1.0.0-beta.8",
    "eslint": "^4.17.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-graphql": "^1.5.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-typescript": "^0.8.1",
    "graphql-schema-linter": "^0.0.28",
    "husky": "^0.15.0-beta.13",
    "nodemon": "^1.12.1",
    "tap-nyan": "^1.1.0",
    "typescript-eslint-parser": "^12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "sources": [
      "bot/**/*.ts"
    ]
  }
}
